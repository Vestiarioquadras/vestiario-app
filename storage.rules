rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // ğŸ“¸ Permitir upload de imagens para qualquer usuÃ¡rio autenticado
    match /images/{allPaths=**} {
      allow read, write: if request.auth != null;
    }
    
    // ğŸŸï¸ Permitir upload de imagens de quadras
    match /courts/{allPaths=**} {
      allow read, write: if request.auth != null;
    }
    
    // ğŸ‘¤ Permitir upload de imagens de perfil
    match /profiles/{allPaths=**} {
      allow read, write: if request.auth != null;
    }
    
    // ğŸš« Permitir acesso a todos os outros arquivos
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}

